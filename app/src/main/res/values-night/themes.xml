<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FamilyCarRent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_D</item>
        <item name="colorPrimaryVariant">@color/orange_A</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_A</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="PrimaryColor">@color/orange_D</item>

        <!-- Vehicle Item -->
        <item name="VehicleItemBackground">@drawable/rounded_dark</item>
        <item name="VehicleItemStyle">@style/VehicleItemLayout</item>

        <!-- Profile Icons -->
        <item name="PlusIcon">@drawable/plus_50_white</item>
        <item name="SettingsIcon">@drawable/settings_50_white</item>
        <item name="DeleteIcon">@drawable/delete_50_white</item>
        <item name="ProfileSignOutIcon">@drawable/sign_out_50_white</item>
        <item name="CheckmarkIcon">@drawable/checkmark_50_white</item>
    </style>
</resources>