<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/MainHeadline"
            android:text="Profile" />

        <LinearLayout style="@style/MainBackground">

            <LinearLayout
                style="@style/ItemLayout"
                android:layout_height="70dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_ProfileAccount"
                    style="@style/ItemIcon"
                    android:layout_weight="2"
                    android:src="@drawable/ic_person_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_ProfileAccountName"
                        style="@style/ItemText"
                        android:layout_weight="1"
                        android:layout_marginBottom="-10dp"
                        android:text="John Doe" />

                    <TextView
                        android:id="@+id/tv_ProfileAccountEmail"
                        style="@style/ItemText"
                        android:layout_weight="2"
                        android:layout_marginTop="-10dp"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:text="john.doe@gmail.com" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/MainBackground">

            <LinearLayout
                android:id="@+id/layout_ProfileMyFamily"
                style="@style/ItemLayout">

                <TextView
                    style="@style/ItemText"
                    android:text="My Family" />

                <ImageView
                    style="@style/ItemIcon"
                    android:src="?attr/PlusIcon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ProfileMyCars"
                style="@style/ItemLayout">

                <TextView
                    style="@style/ItemText"
                    android:text="My Cars" />

                <ImageView
                    style="@style/ItemIcon"
                    android:src="?attr/PlusIcon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/MainBackground">

            <LinearLayout
                android:id="@+id/layout_ProfileSettings"
                style="@style/ItemLayout">

                <TextView
                    style="@style/ItemText"
                    android:text="Settings" />

                <ImageView
                    style="@style/ItemIcon"
                    android:src="?attr/SettingsIcon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ProfileSignOut"
                style="@style/ItemLayout">

                <TextView
                    style="@style/ItemText"
                    android:text="Sign Out" />

                <ImageView
                    style="@style/ItemIcon"
                    android:src="?attr/ProfileSignOutIcon" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>